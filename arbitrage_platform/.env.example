# Django Core
DJANGO_SECRET_KEY="your_very_strong_and_unique_secret_key_here_DO_NOT_COMMIT_DEFAULT_KEY"
DJANGO_DEBUG="0" # Set to "1" for development, "0" for production
DJANGO_ALLOWED_HOSTS="yourdomain.com,www.yourdomain.com,localhost,127.0.0.1" # Comma-separated
DJANGO_CSRF_TRUSTED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com" # Comma-separated, ensure HTTPS

# Database (these are used by docker-compose to set up the DB, and by Django through DATABASE_URL)
POSTGRES_DB="arbitrage_db"
POSTGRES_USER="arbitrage_user"
POSTGRES_PASSWORD="a_very_strong_and_secure_password_here"
POSTGRES_PORT_HOST="5433" # Host port for PostgreSQL if mapping directly

# DATABASE_URL is constructed in docker-compose.yml using the above PG variables.
# Example for local dev if not using docker-compose for DB, or for external DB:
# DATABASE_URL="psql://arbitrage_user:arbitrage_pass@localhost:5432/arbitrage_db"

# Redis (these are used by docker-compose for Celery/Cache settings in Django)
# REDIS_HOST_CELERY="redis" # Docker service name
# REDIS_PORT_CELERY="6379"
# REDIS_HOST_CACHE="redis"  # Docker service name
# REDIS_PORT_CACHE="6379"
# REDIS_PASSWORD="" # Optional: if Redis is password protected

# Application Specific
MINIMUM_SCANNER_ACCESS_BALANCE="10.00" # e.g., 10.00 USDT
USDT_TRC20_DEPOSIT_ADDRESS="YOUR_ACTUAL_STATIC_USDT_TRC20_WALLET_ADDRESS_HERE"
USDT_TRC20_QR_CODE_URL="/static/images/your_qr_code_image.png" # Example path if serving static QR

# HTTPS Proxy Settings (set to "True" if behind a proxy handling HTTPS)
DJANGO_SECURE_SSL_REDIRECT="False"
DJANGO_SESSION_COOKIE_SECURE="False"
DJANGO_CSRF_COOKIE_SECURE="False"

# Optional: Celery settings if not using defaults from settings.py derivation
# CELERY_BROKER_URL="redis://redis:6379/0"
# CELERY_RESULT_BACKEND="redis://redis:6379/1"

# Note: PYTHONUNBUFFERED and PYTHONDONTWRITEBYTECODE are set in Dockerfile.
# DJANGO_SETTINGS_MODULE is typically set by manage.py or the WSGI server.
# For Gunicorn in Docker, it's often implicitly arbitrage_platform.settings.
